.headerinner {
    background-color: $primary-colour;
}

.footerinner,
.footerinner a {
    color: $white;
}

.rate-page h3, h3.rate-page {
    @include block-header();
}


.news,
.whats-on {
    margin-bottom: $base-font-size;
    h3 {
        @include block-header();
    }
    & > a {
        display: block;
        margin-bottom: $base-font-size;
    }
}

.link-more {
    font-weight: 700;
}

.council {
    a:before { content: 'your\00a0'; }
}

.socialmedia {
    color: $white;
    padding: 20px 5px 5px;
    text-align: center;
    li {
        display: inline;
        &:after {
            content: '\00a0';
        }
    }
}

.brand {
    margin-top: 60px;
    max-height: 30px;
    overflow: hidden;
    &:hover {
        img {
            margin-top: -66px;
            overflow: hidden;
        }
    }
}

.logo {
    background-color: $dark-grey;
    height: 132px;
    vertical-align: middle;
}

.image {
    margin: 0 0 12px;
    position: relative;
    width: 100%;
    img {
        height: auto;
        width: 100%;
    }
}

.caption {
    background: rgba(0, 0, 0, 0.5);
    bottom: 2px;
    color: $white;
    left: 0;
    padding: 6px 6px 6px 3px;
    position: absolute;
    right: 0;
    text-align: right;
    vertical-align: bottom;
}

.shareprintpdf {
    text-align: right;
}

.aside-block,
.localtoyou {
    @include aside-block();
}

.do-it__item {
    color: $white;
    background-color: $dark-grey;
    background-position: 10px top;
    background-repeat: no-repeat;
    color: $white;
    float: left;
    margin-left: 1.25%;
    width: 19%;
    min-height: $base-font-size*13;
    &:hover {
        background-color: $primary-colour;
    }
    h3 {
        @include block-header();
        margin-top: 70px;
    }
    p {
        background: $black;
        min-height: $base-font-size*4;
        padding: 8px;
        margin-bottom: 0;
    }
}

.do-it {
    box-sizing: border-box;
    margin-top: $base-font-size;
    a {
        color: $white;
    }
    & > div {
        @extend .do-it__item;
    }
    & >:first-child {
        margin-left: 0;
        overflow: hidden;
    }
}


.apply {
    @extend .do-it__item;
    background-image: url(/SiteElements/images/apply.png);
}

.book {
    @extend .do-it__item;
    background-image: url(/SiteElements/images/book.png);
}

.pay {
    @extend .do-it__item;
    background-image: url(/SiteElements/images/pay.png);
}

.report {
    @extend .do-it__item;
    background-image: url(/SiteElements/images/report.png);
}

.say {
    @extend .do-it__item;
    background-image: url(/SiteElements/images/say.png);
}

.header {
    background-color: $black;
}

.socialmedia a {
    color: $white;
}

.strongtext,
.strongtextgrey {
    font-weight: 700;
}

.navbar a,
.navbar a:visited {
    color: $white;
}


.site-map {
    margin: 10px;
}

.watermark {
    color: gray;
}

.footer-message {
    text-align: center;
}

.bluetext {
    color: $primary-colour;
}

.messagebox {
    background-color: $primary-colour;
    border: $primary-colour thick solid;
    color: $white;
    line-height: 24px;
    padding: 6px;
    a {
        color: $white;
        text-decoration: underline;
    }
}

.christmasmessagebox {
    @extend .messagebox;
}

.landingpage-list {
    li {
        display: inline-block;
        margin-right: 10px;
        vertical-align: top;
        width: 30%;
    }
}

.browsealoud > * {
    float: right;
    margin-right: 10px;
}

.afclogo {
    margin: 120px 0 0 620px;
    position: absolute;
    white-space: normal;
    z-index: 0;
}

.intersitenav a:hover {
    color: $white;
    text-decoration: none;
}

ul.landingpage-list {
    margin-left: 0;
}

.footer {
    margin-top: $base-font-size;
    background-color: $black;
    .links {
        background-color: $primary-colour;
        color: $white;
        text-align: center;
        li {
            line-height: 0;
            margin: 0;
            padding: 0;
            display: inline-block;
            &:before {
                content: '|';
            }
            &:first-child:before {
                content: '';
            }
        }
    }
    .other-links {
        margin-top: $base-font-size;
        img {
            display: inline;
            float: right;
            margin-right: $base-font-size;
            width: auto;
        }
    }
}

.contact-details {
    border-left: 1px solid $white;
    margin-top: 12px;
    padding-left: 12px;
}
