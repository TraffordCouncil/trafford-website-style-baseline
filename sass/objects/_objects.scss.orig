// Placeholders
%body-table {
    width: 100%;
    caption { display: none; }
    th,
    td {
        text-align: left;
        vertical-align: middle;
        padding: $base-font-size;
        background-color: $pale-grey;
        border-top: medium solid white;
    }
    th {
        background-color: $light-grey;
        color: $very-dark-grey;
        font-weight: 700;
    }
}

.hide,
.fwwlogo {
    display: none;
}

.header-overlay {
    display: block;
    position: absolute;
    z-index: 999;
    right: 0;
    top: 106px;
}

.bodycontent {
    ul {
        margin-left: 30px;
        li {
            list-style: disc outside;
        }
    }
    table {
        @extend %body-table;
    }
    li {
        clear: left;
    }
}

table.data-table {
    @extend %body-table;
    th  {
        background-color: $primary-colour;
        color: $white;
    }
}

.relateddocuments,
.relatedpages,
.externallinks,
.contactus {
    @include related-links();
}

.links {
    min-height: $base-font-size*2;
    padding-top: 6px;
}

